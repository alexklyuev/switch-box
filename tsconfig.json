{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": ["es6", "dom"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["jasmine"]
  },
  "exclude": [
    "node_modules"
  ]
}